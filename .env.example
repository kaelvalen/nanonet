# Veritabanı
DATABASE_URL=postgres://postgres:CHANGE_ME@localhost:5432/nanonet

# JWT — en az 32 karakter random string
JWT_SECRET=CHANGE_ME_USE_RANDOM_32_CHARS_MINIMUM

# AI API
CLAUDE_API_KEY=CHANGE_ME

# Uygulama
PORT=8080
FRONTEND_URL=http://localhost:3000
POLL_DEFAULT_SEC=10
WS_MAX_CONNECTIONS=1000

# Docker
DB_PASSWORD=postgres

# Agent (register+login yapıp servis oluşturduktan sonra doldurun)
AGENT_SERVICE_ID=
AGENT_TOKEN=
AGENT_TARGET_HOST=localhost
AGENT_TARGET_PORT=8080
AGENT_HEALTH_ENDPOINT=/health
AGENT_POLL_INTERVAL=10
AGENT_ERROR_RATE_WINDOW=20

# Agent komutları — izlenen servisi yönetmek için shell komutları
# Örnek: systemd: "systemctl restart myapp" / docker: "docker restart mycontainer"
AGENT_RESTART_CMD=
AGENT_STOP_CMD=
AGENT_SCALE_CMD=

# Kubernetes entegrasyonu (opsiyonel)
# Tanımlandığında K8s cluster'a bağlanılır (in-cluster veya kubeconfig)
K8S_NAMESPACE=default

# SMTP (opsiyonel — şifre sıfırlama emaili için)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=
